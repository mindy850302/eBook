<div class="form-horizontal">
    <!--書籍名稱-->
    <div class="form-group">
        <label class="control-label col-md-2">書籍名稱</label>
        <div class="col-md-10">
            <input type="text" class="k-textbox" name="BookName" id="BookName" />
        </div>
    </div>

    <!--圖書類別-->
    <div class="form-group">
        <label class="control-label col-md-2">圖書類別</label>
